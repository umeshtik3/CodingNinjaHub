{
"manifest_version": 3,
"name": "CodingNinjaHub",
"description": "Automatically integrate your Coding Ninja's submissions to GitHub Repo",
"version": "1.0",
"action": {
"default_icon": "Sample.png",
"default_popup": "popup.html"
},
"background": {
    "scripts": ["scripts/background.js"],
    "persistent": false
  },
 "host_permissions": [
    "https://github.com/*",
    "https://api.github.com/*",
    "https://leetcode.com/*",
    "https://practice.geeksforgeeks.org/*"
  ],
"permissions": [
 "tabs",
    "unlimitedStorage",
    "storage"
]
}